@model IEnumerable<DataLayer.User>

<p>
    <input type="button" value="Load User from Active Directory" onclick="LoadSyncAD();" />
</p>

<table class="webgrid-table" id="tblAdmins">
    <tr>
        <th>
            Username
        </th>
        <th>
            First Name
        </th>
        <th>
            Last Name
        </th>
        <th>
            Email Address
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Username)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                <input type="button" class="RedButton" value="Remove User" onclick="DeleteUser(@item.UserID);" />
            </td>
        </tr>
    }

</table>

<div id="divSyncADAdminModal" style="display: none; padding: 10px;">
    <input type="image" src="~/Images/Close.png" class="CloseModal" alt="Close" align="right" onclick="PopModal($('#divSyncADAdminModal'), 'hide', '0'); " />
    <div style="border: medium ridge #C0C0C0; margin: 10px; background-color: #FFFFFF; border-radius: 5px; text-align: center; padding: 10px;">
        @{ Html.RenderPartial("_SearchAD", new DataLayer.ADUser { ForUser = true }); }
    </div>
</div>
